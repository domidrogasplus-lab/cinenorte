# Cine Norte - Variables de Entorno
# Copia este archivo como .env y configura tus API keys

# OpenAI API Key (requerido para generación de guiones)
# Obtén tu key en: https://platform.openai.com/api-keys
OPENAI_API_KEY=tu_openai_api_key_aqui

# TMDB API Key (requerido para datos de películas/series)
# Obtén tu key en: https://www.themoviedb.org/settings/api
TMDB_API_KEY=tu_tmdb_api_key_aqui

# ElevenLabs API Key (opcional, para voz IA premium)
# Obtén tu key en: https://elevenlabs.io/
ELEVENLABS_API_KEY=tu_elevenlabs_api_key_aqui

# YouTube API Key (opcional, para análisis de tendencias)
# Obtén tu key en: https://console.developers.google.com/
YOUTUBE_API_KEY=tu_youtube_api_key_aqui

# Configuración de la base de datos (opcional)
DATABASE_URL=sqlite:///cine_norte.db

# Configuración de logging
LOG_LEVEL=INFO
LOG_FILE=logs/cine_norte.log

# Configuración de directorios
OUTPUT_DIR=output
TEMP_DIR=temp
ASSETS_DIR=assets

# Configuración de video
DEFAULT_VIDEO_QUALITY=high
DEFAULT_AUDIO_QUALITY=high

# Configuración de IA
AI_MODEL=gpt-4
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=800

# Configuración de voz
VOICE_LANGUAGE=es
VOICE_SPEED=1.0
VOICE_PITCH=0.0

# Configuración de redes sociales
DEFAULT_HASHTAGS=#CineNorte,#AnálisisCinematográfico,#Entretenimiento
MAX_HASHTAGS=10

# Configuración de optimización
ENABLE_AI_OPTIMIZATION=true
ENABLE_AUTO_SUBTITLES=true
ENABLE_BACKGROUND_MUSIC=true
